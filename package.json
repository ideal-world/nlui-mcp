{
	"name": "nlui-mcp",
	"description": "A natural language processing-based user interface framework designed through large language models to simplify user interaction with computer systems through natural language communication.",
	"version": "0.1.0",
	"type": "module",
	"authors": [
		{
			"name": "gudaoxuri",
			"email": "i@sunisle.org",
			"url": "https://idealworld.group/"
		}
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ideal-world/nlui-mcp.git"
	},
	"keywords": [
		"llm",
		"table",
		"chart",
		"mcp"
	],
	"scripts": {
		"dev": "npm run generate:schemas & vite dev",
		"build": "npm run generate:schemas && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "test:unit -- --run",
		"machine-translate": "inlang machine translate --project project.inlang",
		"generate:schemas": "tsx scripts/generate-schemas.ts"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.1",
		"apexcharts": "^5.3.2",
		"flyonui": "^2.3.1",
		"lodash": "^4.17.21",
		"marked": "^16.1.1",
		"openai": "^5.11.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.32.0",
		"@iconify/json": "^2.2.364",
		"@iconify/tailwind4": "^1.0.6",
		"@inlang/cli": "^3.0.12",
		"@inlang/paraglide-js": "^2.2.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.27.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^24.1.0",
		"@vitest/browser": "^3.2.4",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.54.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.37.2",
		"svelte-check": "^4.3.0",
		"tailwindcss": "^4.1.11",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.38.0",
		"typescript-json-schema": "^0.65.1",
		"vite": "^7.0.6",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
