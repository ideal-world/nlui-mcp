{
  "name": "nlui-mcp",
  "description": "A natural language processing-based user interface framework designed through large language models to simplify user interaction with computer systems through natural language communication.",
  "version": "0.1.0",
  "type": "module",
  "authors": [
    {
      "name": "gudaoxuri",
      "email": "i@sunisle.org",
      "url": "https://idealworld.group/"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideal-world/nlui-mcp.git"
  },
  "keywords": [
    "llm",
    "table",
    "chart",
    "mcp"
  ],
  "scripts": {
    "dev": "npm run generate:schemas & vite dev",
    "build": "npm run generate:schemas && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "pnpm run test:unit -- --run",
    "machine-translate": "inlang machine translate --project project.inlang",
    "generate:schemas": "tsx scripts/generate-schemas.ts"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/list": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "apexcharts": "^5.3.4",
    "flyonui": "^2.4.0",
    "lodash": "^4.17.21",
    "marked": "^16.2.1",
    "openai": "^5.18.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.34.0",
    "@iconify/json": "^2.2.380",
    "@iconify/tailwind4": "^1.0.6",
    "@inlang/cli": "^3.0.12",
    "@inlang/paraglide-js": "^2.2.0",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/kit": "^2.37.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.4",
    "@tailwindcss/vite": "^4.1.12",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "globals": "^16.3.0",
    "mdsvex": "^0.12.6",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.38.6",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "typescript-json-schema": "^0.65.1",
    "vite": "^7.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
